/* pages/movie/movie.wxss */
.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 50rpx 40rpx;
}
.posterView {
  flex: 1;
}

.posterView .poster {
  flex: 1;
  margin: 20rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 22rpx;
  color: #888;
  margin-top: 10rpx;
  width: 80%;
}

.summary {
  flex: 1;
  margin: 0rpx 50rpx 20rpx;
  align-content: center;
  justify-content: center;
}

.label {
  display: block;
}

.content {
  color: #666;
  font-size: 20rpx;
  padding: 10rpx
}
